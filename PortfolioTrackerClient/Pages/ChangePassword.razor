@page "/change-password"
@using PortfolioTrackerShared.Models.UserModels
@inject NavigationManager NavigationManager
@inject IStringLocalizer<Resource> Localizer

<h3>Passwort ändern</h3>

<EditForm Model="@userChangePassword" OnValidSubmit="ChangeUserPassword">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label>@Localizer["Password"]</label>
        <InputText @bind-Value="userChangePassword.Password" class="form-control" />
        <ValidationMessage For="@(() => userChangePassword.Password)" />
    </div>

    <div class="form-group">
        <label>@Localizer["ConfirmPassword"]</label>
        <InputText @bind-Value="userChangePassword.ConfirmPassword" class="form-control" />
        <ValidationMessage For="@(() => userChangePassword.ConfirmPassword)" />
    </div>

    <button type="submit" style="margin-top: 10px" class="btn btn-primary">@Localizer["ChangePassword"]</button>
</EditForm>

@code {

    private UserChangePassword userChangePassword = new UserChangePassword();

    private void ChangeUserPassword()
    {
